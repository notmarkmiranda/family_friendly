<div class="container">
  <div class="jumbotron">
    <h2>Welcome to Your Family Friendly Profile, <%= "#{current_user.name}" %>!</h2>

    <table class=table>
      <thead>
        <tr>
          <th>
            Family Member Name
          </th>
          <th>
            Age
          </th>
        </tr>
        <% @user.families.each do |member| %>
        <tr>
          <td>
            <%= member.name %>
          </td>
          <td>
            <%= member.age %>
          </td>
        </tr>
<% end %>


      </thead>
    </table>

    <%= link_to 'Add Family Member', new_users_family_path %>
  </div>
</div>
